<header class="masthead" style="background-image: url(<%= asset_path 'default.jpg' %>)">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1><%= @timer.title %></h1>
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7 container text-center">
          <div class="row justify-content-center">
            <div class="col-5"><h6 class="post-subtitle">電車・バス乗車時刻</h6></div>
            <div class="col-3"><h3 class="post-subtitle"><%= @timer.arrival_time %></h3></div>
            <div class="col-5"><h6 class="post-subtitle">駅・バス停まで</h6></div>
            <div class="col-3"><h3 class="post-subtitle"><%= @timer.require_time %>分</h3></div>
            <div class="col-5"><h6 class="post-subtitle">歩く速さ</h6></div>              <div class="col-3"><h3 class="post-subtitle"><%= @timer.walking_speed_ja %></h3></div>
          </div>
          <div class="text-right">
            <%= link_to '編集', edit_timer_path(@timer), class:"btn btn-outline-primary btn-sm" %>
          </div>

          <div id="activities_area" class="text-center row">
            <%= render partial: 'activities/index', locals: { activities: @activities, timer: @timer } %>
          </div>
          <br>
          <div id="form_area" class="justify-content-center">
            <%= render partial: 'activities/form', locals: { activity: @activity, timer: @timer } %>
          </div>

          <div class="row justify-content-center my-5">
            <div class="col-3">
              <%= link_to '戻る', new_timer_path, class:"btn btn-outline-light btn-lg" %>
            </div>
            <div class="col-6">
              <% if @activities.length > 0%>
                <%= link_to 'タイマーをセットする', set_timer_path(@timer), class:"btn btn-outline-primary btn-lg" %>
              <% else %>
                <button onclick="showAlert()", , class="btn btn-outline-primary btn-lg">タイマーをセットする</button>
              <% end %>    
            </div>
          </div>
        </div>
    </div>
</div>

<%# js ---------------------------------------------------------------- %>

<script type="text/javascript">
function showAlert() {
  alert('一つ以上出発前の準備を作成してください')
}
</script>